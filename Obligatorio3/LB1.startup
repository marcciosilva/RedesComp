ifconfig eth0 10.0.0.5 netmask 255.255.255.0 up
ifconfig eth1 10.0.1.3 netmask 255.255.255.0 up

# route add default gw 10.0.1.1 dev eth1
route add -net 100.0.0.0/24 gw 10.0.1.1 dev eth1

iptables --table nat --append POSTROUTING --source 10.0.1.0/24 --destination 10.0.0.0/24 --jump MASQUERADE
iptables --table nat --append POSTROUTING --source 100.0.0.0/24 --destination 10.0.0.0/24 --jump MASQUERADE
iptables --table nat --append PREROUTING --destination 10.0.1.3 --match statistic --mode nth --every 2 --jump DNAT --to-destination 10.0.0.1
iptables --table nat --append PREROUTING --destination 10.0.1.3 --jump DNAT --to-destination 10.0.0.2

echo "watch 'iptables -t nat -vnL'" >> /root/.bashrc