ifconfig eth0 10.0.0.6 netmask 255.255.255.0 up
ifconfig eth1 10.0.1.4 netmask 255.255.255.0 up

iptables --table nat --append POSTROUTING --destination 10.0.0.0/24 --jump MASQUERADE
iptables --table nat --append PREROUTING --destination 10.0.1.4 --match statistic --mode nth --every 2 --jump DNAT --to-destination 10.0.0.3
iptables --table nat --append PREROUTING --destination 10.0.1.4 --jump DNAT --to-destination 10.0.0.4

echo "watch 'iptables -t nat -vnL'" >> /root/.bashrc

/etc/init.d/zebra start
