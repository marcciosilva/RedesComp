ifconfig eth0 10.0.1.2 netmask 255.255.255.0 up
ifconfig eth1 200.0.0.1 netmask 255.255.255.0 up
ifconfig eth2 200.0.0.2 netmask 255.255.255.0 up

route add default gw 200.0.0.1 dev eth0
route add -net 100.0.0.0/24 gw 10.0.1.1 dev eth0

/etc/init.d/bind start

echo 'net.ipv4.conf.eth0.rp_filter = 0' >> /etc/sysctl.conf
echo 'net.ipv4.conf.eth1.rp_filter = 0' >> /etc/sysctl.conf
echo 'net.ipv4.conf.lo.rp_filter = 0' >> /etc/sysctl.conf
sysctl -p